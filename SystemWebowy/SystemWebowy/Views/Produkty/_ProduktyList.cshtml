@model IEnumerable<SystemWebowy.Models.Produkt>

<div class="col">
    <div class="container">
        <div class="row">
            <!--wywołanie produktu-->
            @foreach (var item in Model)
            {
                <div class="col-xs-12 col-sm-6 col-md-3">
                    <div class="col-item">
                        <div class="post-img-content">
                            <!--wywołanie zdjęcia produktu-->
                            <img src="http://placehold.it/350x250" class="img-responsive" />
                            <span class="post-title">
                                <b>New</b><br>
                            </span>
                        </div>
                        <div class="info text-center">
                            <!--wywołanie nazwy produktu-->
                            <h5><b>@item.NazwaProduktu</b></h5>
                            <div class="separator clear-left">
                                <p class="btn-details">
                                    <!--wywołanie ceny produktu-->
                                    @item.CenaS
                                </p>
                                <p class="btn-details">
                                    <i class="fa fa-list"></i><a href="@Url.Action("Produkt","Produkty", new { id = item.ProduktId})" class="hidden-sm">Szczegóły</a>
                                </p>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                    <br />
                </div>

            }
            

        </div>
    </div>

</div>