@model IEnumerable<SystemWebowy.Models.Kategoria>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><i class="fa fa-user fa-fw"></i> Konto</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                @Html.Partial("_Konto")
                <div class="col-sm-3 col-md-3 nav navbar-right">
                    <form class="navbar-form" role="search">
                        <div class="input-group">
                            <input type="text" class="form-control btn btn-default" placeholder="Search" name="q">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div><!-- /.navbar-collapse -->
           
        </nav>
    </div>
    <div class="container-fluid">
        <nav class="navbar navbar-default " role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-3">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#"><i class="fa fa-home fa-fw"></i>Start</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-3">
                <ul class="nav navbar-nav">
                    @Html.Action("KategorieMenu")
                    @*<li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-birthday-cake fa-fw"></i> Kategorie</a>
                           
                        <ul class="dropdown-menu">
                            @foreach (var item in new SystemWebowy.DataAccessLayer.CukierniaDBContext().Kategorie.ToList())
                            {
                                <li><a href="#">@item.NazwaKategorii</a></li>
                            }
                        </ul>
                    </li>*@

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-paint-brush fa-fw"></i> Kreator produktów</a>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-info fa-fw"></i> Informacje</a>
                    </li>


                </ul>
            </div><!-- /.navbar-collapse -->
        </nav>
        </div>
    <!--layout-->
    <div class="page-header">
        <div class="container">
            <h1><i class="fa fa-birthday-cake" aria-hidden="true"></i> Cukiernia internetowa</h1>
            <p class="lead">
                <small>Zamów pyszne torty i inne słodkości z dostawą lub odbiorem osobistym!</small>
            </p>
        </div>
    </div>
    <!--/.layout-->
    <div class="container-fluid body-content">
        @RenderBody()
    </div>
   
    <!----------- Footer ------------>
    <footer class="footer-bs">
        <div class="row">
            <div class="col-md-3 footer-brand animated fadeInLeft">
                <h2>Informacje</h2>
                <p>System zrobiony na potrzeby pracy inżynierskiej</p>
                <p>© @DateTime.Now.Year Magdalena Kudyba</p>
